<Window x:Class="MARISA.NET.CreateBackupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MARISA.NET"
        mc:Ignorable="d"
        Title="バックアップの作成" Height="249" Width="283" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="バックアップ名:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox 
            x:Name="BackupNameBox"
            MaxLines="1" Margin="10,36,10,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top"/>
        <Label Content="コメント:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,59,0,0"/>
        <TextBox
            x:Name="CommentBox"
            Margin="11,85,10,39" TextWrapping="NoWrap" AcceptsReturn="True" Text=""/>
        <Button
            x:Name="CreateButton"
            Width="90" Height="24"
            Content="作成(_C)" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Click="CreateButtonClick"/>

    </Grid>
</Window>
